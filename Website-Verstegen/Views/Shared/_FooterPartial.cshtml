<link rel="stylesheet" href="~/css/Footer.css" />
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">

@model List<Certificate>

<div class="container-fluid first-footer-container">
    <div class="row">
        <div class="row footer-header-text">Our certificates</div>
    </div>
    <div class="col-md-12 image-row">
        @foreach (var certificate in Model)
        {
            <div class="col-md-1 col-sm-4 col-xs-4 certificate">
                <a download href="~/images/certificates/@certificate.Img_Src"><img class="img-responsive certificate-images" alt="@certificate.Alt_Text" src="@certificate.Img_Src" /></a>
            </div>
        }
    </div>
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12 footer-download-text">Click on a certificate to download</div>
        <div class="col-md-12 col-sm-12 col-xs-12 footer-download-text-after"><a class="download-all-certificates" download href="all.certificates.pdf"><i class="fas fa-download download-icon"></i> Download all our certificates</a></div>
    </div>
</div>
<div class="container-fluid second-footer-container">
    <div class="row second-footer-second-row">
        <div class="col-md-4 col-sm-6 col-xs-12 second-footer-first-column">
            <h5 class="second-footer-first-column-text">Verstegen Spices & Sauces</h5>
            <address class="address-info">
                t.a.v. Business Unit Food Industry<br />
                Industrieweg 161<br />
                3044 AS Rotterdam<br />
                The Netherlands<br />
            </address>
        </div>
        <div class="col-md-4 col-sm-6 col-xs-12 second-footer-second-column">
            <h5 class="second-footer-second-column-text">Contact details</h5>
            <div class="contact-info">
                +31 (0)10-2455160<br />
                foodindustry@verstegen.eu<br />
                Send us a message<br />
            </div>
        </div>
        <div class="col-md-4 col-sm-12 col-xs-12 second-footer-third-column">
            <h5 class="second-footer-third-column-text">Newsletter</h5>
            <div class="newsletter-text">Stay up to date about Verstegen</div>
            <form action="https://verstegen-test.us19.list-manage.com/subscribe/post?u=5d367e52f815fe4ecc212b540&amp;id=ee2b342e96" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="hiddenFrame" onsubmit="this.submit(); this.reset(); return false;">
                <input type="email" value="" name="EMAIL" class="input-newsletter" id="mce-EMAIL" placeholder="E-mail address" required /><button type="submit" class="subscribe-button">Subscribe</button>
            </form>
        </div>
    </div>
</div>
<div class="container-fluid third-footer-container">
    <div class="row third-footer-third-row">
        <div class="col-md-4 col-sm-4 col-xs-12 third-footer-first-column">
            <img class="img-responsive third-footer-verstegen-logo" alt="Verstegen Logo" src="/images/logo.png" />
            <div class="third-footer-first-column-text">©2017 Verstegen Spices & Sauces</div>
        </div>
        <div class="col-md-4 col-sm-4 col-xs-12 third-footer-second-column">
            <div class="third-footer-second-column-text">Verstegen. Enjoy great taste.</div>
        </div>
        <div class="col-md-4 col-sm-4 col-xs-12 third-footer-third-column">
            <div class="btn-toolbar">
                <button type="button" class="btn btn-override btn-sm">
                    <i class="fab fa-youtube"></i>
                </button>
                <button type="button" class="btn btn-override btn-sm">
                    <i class="fab fa-facebook-f"></i>
                </button>
                <button type="button" class="btn btn-override btn-sm">
                    <i class="fab fa-twitter"></i>
                </button>
            </div>
        </div>
    </div>
</div>
