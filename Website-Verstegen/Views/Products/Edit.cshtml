@model Website_Verstegen.ViewModels.Product_ProductDetailViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "_AdminLayout";
}


<h2>Edit</h2>

<h4>Product</h4>
<hr />
<div class="row">
    @using (Html.BeginForm("Edit", "Products", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="col-md-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Product.Id" />
            <div class="form-group">
                <label asp-for="Product.Title" class="control-label"></label>
                <input asp-for="Product.Title" class="form-control" />
                <span asp-validation-for="Product.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Category" class="control-label"></label>
                <input asp-for="Product.Category" class="form-control" />
                <span asp-validation-for="Product.Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Description" class="control-label"></label>
                <textarea asp-for="Product.Description" class="form-control"></textarea>
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Contents" class="control-label"></label>
                <input asp-for="Product.Contents" class="form-control" />
                <span asp-validation-for="Product.Contents" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.DownloadLink" class="control-label">Download Link</label>
                <input asp-for="Product.DownloadLink" class="form-control" />
                <span asp-validation-for="Product.DownloadLink" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="Product.ImageUrl" class="control-label"></label>
                <input asp-for="Product.ImageUrl" class="form-control" />
                <span asp-validation-for="Product.ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                @Html.Label("ImageUrl", "ImageUrl")
                @Html.TextBox("ImageUrl", "ImageUrl", new { @class = "form-control", type = "file" })
            </div>
            <div class="form-group">
                <label class="control-label">Current Image</label>
                <img class="img-responsive product-image" src="@Model.Product.ImageUrl" />
            </div>
        </div>
        <div class="col-md-3">
            @foreach (var detail in Model.AllDetails)
            {
                <div class="form-group">
                    <label class="control-label">Product Details</label>
                    <input name="product_detail" class="form-control" value="@detail.Details" />
                </div>
            }
        </div>
    }
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
