@model Website_Verstegen.ViewModels.ThemeProducts_ViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "_AdminLayout";
}

<h2>Edit</h2>

<h4>ThemeProduct</h4>
<hr />
<div class="row">
    @using (Html.BeginForm("Edit", "ThemeProducts", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
    <div class="col-md-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="CurrentThemeProduct.ThemeProductId" />
        <div class="form-group">
            <label class="control-label">@Model.CurrentThemeProduct.Product.Type</label>
            <select asp-for="CurrentThemeProduct.Product.Id" class="form-control" name="productId" asp-items="ViewBag.Products">
                <option selected disabled value="@Model.CurrentThemeProduct.Product.Id">@Model.CurrentThemeProduct.Product.Title</option>
            </select>
            <span asp-validation-for="CurrentThemeProduct.Product.Id" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
    <div class="col-md-4">
        <div class="form-group">
            <label class="control-label">Theme</label>
            <select asp-for="CurrentThemeProduct.Theme.ThemeId" class="form-control" name="themeId" asp-items="ViewBag.Themes">
                <option selected disabled value="@Model.CurrentThemeProduct.Theme.ThemeId">@Model.CurrentThemeProduct.Theme.ThemeName</option>
            </select>
            <span asp-validation-for="CurrentThemeProduct.Theme.ThemeId" class="text-danger"></span>
        </div>
    </div>     
    }
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}