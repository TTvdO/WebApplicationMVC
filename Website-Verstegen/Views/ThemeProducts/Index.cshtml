@model IEnumerable<Website_Verstegen.Models.ThemeProduct>

@{
    ViewData["Title"] = "Index";
    Layout = "_AdminLayout";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Theme)
            </th>
            <th>
                @Html.DisplayName("Edit")
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Product.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Theme.ThemeName)
        </td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.ThemeProductId">Edit</a> |
            <a asp-action="Details" asp-route-id="@item.ThemeProductId">Details</a> |
            <a asp-action="Delete" asp-route-id="@item.ThemeProductId">Delete</a>
        </td>
    </tr>
}
    </tbody>
</table>