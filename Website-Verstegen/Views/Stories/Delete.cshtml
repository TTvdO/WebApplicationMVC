@model Website_Verstegen.Models.Story

@{
    ViewData["Title"] = "Delete";
    Layout = "_AdminLayout";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Story</h4>
    <hr />
    <div class="row">
        <dl class="col-md-3 dl-horizontal">
            <dt>
                Story's title
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt>
                Story's description
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt>
                Story's category
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Category)
            </dd>
            <dt>
                Story's theme name
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Theme.ThemeName)
            </dd>
        </dl>
        <dl class="col-md-3">
            <dt>
                Story's image
            </dt>
            <dd>
                <img class="img-responsive crud-image" src="@Model.ImageUrl" />
            </dd>
        </dl>
        <dl class="col-md-3">
            <dt>
                Theme's image
            </dt>
            <dd>
                <img class="img-responsive crud-image" src="@Model.Theme.ImageUrl" />
            </dd>
        </dl>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-default" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>