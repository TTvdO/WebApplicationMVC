
@model IEnumerable<Website_Verstegen.Models.SpotLightConnector>

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<p>Want to add a new Spotlight to an existing page? You can overwrite an spotlight by creating a new one with identical Controller and Action name.</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Action Name")
            </th>
            <th>
                @Html.DisplayName("Controller Name")
            </th>
            <th>
                @Html.DisplayName("Delete Spotlight Connector")
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.actionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.controllerName)
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
