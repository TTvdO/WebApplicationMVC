@model Website_Verstegen.Models.Theme

@{
    ViewData["Title"] = "Create";
    Layout = "_AdminLayout";
}

<h2>Create</h2>

<h4>Theme</h4>
<hr />
<div class="row">
    
    <div class="col-md-4">
        @using (Html.BeginForm("Create", "Themes", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ThemeName" class="control-label"></label>
                <input asp-for="ThemeName" class="form-control" />
                <span asp-validation-for="ThemeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.Label("ImageUrl", "ImageUrl")
                @Html.TextBox("ImageUrl", "ImageUrl", new { @class = "form-control", type = "file" })
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div>
                <h4>@ViewBag.Error</h4>
            </div>
            <div>
                <h4>@ViewBag.ImageNull</h4>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        }
        </div>
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}